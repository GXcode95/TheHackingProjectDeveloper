<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<% if @post.photo.attached? %>
  <div data-photo-id="<%= @post.photo.id %>">
    <%= link_to image_tag(@post.photo, alt: "photo"), post_photo_path(post_id: @post.id)%>
  </div>
<% end %>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<div>
  <h2>Comments</h2>
  <%= render @post.comments %>
  <!-- Raccoucie pour une partial sur chaque comments de l'@post -->
  
  <h2>Add comment</h2>
  <%= render "comments/form", post: @post %>
  
  <%= link_to :Edit, edit_post_path(@post) %>
  <%= link_to :Back, root_path %>
  <%= link_to :Delete, post_path(@post), method: :delete, data: {confirm: "Are you sure"} %>
</div>